          },
          "s6": {
            "score": 1.5,
            "penaltyPerRetry": 0.3,
            "minScore": 0.3
          }
        }
      },
      "answer": {
        "final": "(${total}-${remaining})÷${classes}",
        "unit": "支",
        "rationale": "先从总数中减去剩余部分，再平均分配给各个班级"
      }
    }
