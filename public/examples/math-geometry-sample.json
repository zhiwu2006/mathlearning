{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "geometry-problems-001",
  "version": "1.0.0",
  "locale": "zh-CN",
  "metadata": {
    "gradeBand": "G4-G6",
    "subject": "Math",
    "tags": ["几何", "面积", "周长"],
    "createdAt": "2025-01-18T10:00:00Z",
    "author": "Math Learning System"
  },
  "items": [
    {
      "id": "rect-area-001",
      "stem": {
        "text": "一个长方形的长是${length}厘米，宽是${width}厘米，求这个长方形的面积和周长。",
        "variables": {
          "length": {
            "type": "int",
            "range": {
              "min": 5,
              "max": 20
            },
            "constraints": ["length > 0"]
          },
          "width": {
            "type": "int",
            "range": {
              "min": 3,
              "max": 15
            },
            "constraints": ["width > 0", "width < length"]
          }
        }
      },
      "taxonomy": {
        "concepts": ["长方形", "面积", "周长"],
        "skills": ["公式应用", "四则运算"],
        "difficulty": "E"
      },
      "steps": [
        {
          "id": "step-1",
          "type": "question",
          "prompt": "题目要求我们求什么？",
          "multipleSelect": true,
          "options": [
            {
              "id": "option-1-1",
              "text": "长方形的面积",
              "correct": true,
              "feedback": "正确，题目要求求面积"
            },
            {
              "id": "option-1-2",
              "text": "长方形的周长",
              "correct": true,
              "feedback": "正确，题目要求求周长"
            },
            {
              "id": "option-1-3",
              "text": "长方形的对角线长度",
              "correct": false,
              "feedback": "题目没有要求求对角线"
            }
          ]
        },
        {
          "id": "step-2",
          "type": "compute",
          "prompt": "长方形的面积等于多少？",
          "options": [
            {
              "id": "option-2-1",
              "text": "${length} × ${width}",
              "correct": true,
              "feedback": "正确！面积 = 长 × 宽"
            },
            {
              "id": "option-2-2",
              "text": "${length} + ${width}",
              "correct": false,
              "feedback": "这是求和，不是求面积"
            },
            {
              "id": "option-2-3",
              "text": "2 × (${length} + ${width})",
              "correct": false,
              "feedback": "这是周长公式，不是面积公式"
            }
          ],
          "validation": {
            "unit": "平方厘米"
          }
        },
        {
          "id": "step-3",
          "type": "compute",
          "prompt": "长方形的周长等于多少？",
          "options": [
            {
              "id": "option-3-1",
              "text": "2 × (${length} + ${width})",
              "correct": true,
              "feedback": "正确！周长 = 2 × (长 + 宽)"
            },
            {
              "id": "option-3-2",
              "text": "${length} + ${width}",
              "correct": false,
              "feedback": "这是长加宽，不是周长"
            },
            {
              "id": "option-3-3",
              "text": "${length} × ${width}",
              "correct": false,
              "feedback": "这是面积公式，不是周长公式"
            }
          ],
          "validation": {
            "unit": "厘米"
          }
        }
      ],
      "transitions": [
        {
          "fromStep": "step-1",
          "onCorrect": "step-2",
          "onWrong": "step-1",
          "maxRetries": 2
        },
        {
          "fromStep": "step-2",
          "onCorrect": "step-3",
          "onWrong": "step-2",
          "maxRetries": 2
        },
        {
          "fromStep": "step-3",
          "onCorrect": "",
          "onWrong": "step-3",
          "maxRetries": 2
        }
      ],
      "scoring": {
        "total": 10,
        "perStep": {
          "step-1": {
            "score": 2,
            "penaltyPerRetry": 0.3,
            "minScore": 0.5
          },
          "step-2": {
            "score": 4,
            "penaltyPerRetry": 0.5,
            "minScore": 1
          },
          "step-3": {
            "score": 4,
            "penaltyPerRetry": 0.5,
            "minScore": 1
          }
        }
      },
      "answer": {
        "final": "面积=${length}×${width}, 周长=2×(${length}+${width})",
        "unit": "平方厘米和厘米",
        "rationale": "长方形面积=长×宽，周长=2×(长+宽)"
      }
    }
  ]
}