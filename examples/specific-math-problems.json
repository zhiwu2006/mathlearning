        },
        {
          "fromStep": "step-4",
          "onCorrect": "step-5",
          "onWrong": "step-4",
          "maxRetries": 3
        },
        {
          "fromStep": "step-5",
          "onCorrect": "",
          "onWrong": "step-5",
          "maxRetries": 2
        }
      ],
